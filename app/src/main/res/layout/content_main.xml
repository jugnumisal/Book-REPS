<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.karan.bookreps.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/imgbuy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/buybtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp" />

    <ImageView
        android:id="@+id/imgsell"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/sellbtn"
        android:layout_below="@+id/imgbuy"
        android:layout_alignEnd="@+id/imgbuy"
        android:layout_marginEnd="12dp" />


</RelativeLayout>
