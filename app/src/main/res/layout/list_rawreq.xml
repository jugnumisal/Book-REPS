<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/frgtbg">

    <TextView
        android:id="@+id/txtsugg"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:background="@drawable/blurbutton"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="10dp"
        android:fontFamily="times new roman"
        android:text="Click on Email_id for conatct"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/txtbknm"
        android:textColor="#4420ff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="times new roman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtbkauth"
        android:textColor="#4420ff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="times new roman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignStart="@+id/txtbknm"
        android:layout_below="@+id/txtemailus" />

    <TextView
        android:id="@+id/txtemailus"
        android:textColor="#4420ff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="times new roman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/txtbknm"
        android:layout_alignStart="@+id/txtsugg"
        android:layout_marginStart="23dp" />
</RelativeLayout>